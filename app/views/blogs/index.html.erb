<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
<%= if @page.to_i == 0 then "下書き保存" elsif @page.to_i == 1 then "公開保存" else "削除" end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <%if blog.status == @page.to_i then%>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= if blog.status == 0 then "下書き保存" elsif blog.status == 1 then "公開保存" else "削除" end %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
<%= link_to 'Back', root_path %>
